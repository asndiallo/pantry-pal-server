{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:jest/recommended",
    "prettier"
  ],
  "plugins": ["import", "jest"],
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  }
}
